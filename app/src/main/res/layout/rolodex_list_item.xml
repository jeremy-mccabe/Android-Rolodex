<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rolodexListLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_layout_margin_left"
        android:layout_marginTop="@dimen/default_layout_margin_top"
        android:layout_marginEnd="@dimen/default_layout_margin_right"
        android:layout_marginBottom="@dimen/default_layout_margin_bottom"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="@dimen/card_elevation"
        android:id="@+id/rolodexListCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/default_layout_margin_left"
            android:layout_marginTop="@dimen/default_layout_margin_top"
            android:layout_marginEnd="@dimen/default_layout_margin_right"
            android:layout_marginBottom="@dimen/default_layout_margin_bottom"
            android:id="@+id/rolodexListSubLayout">

            <LinearLayout
                android:id="@+id/rolodexDataLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_layout_margin_left"
                    android:layout_marginTop="@dimen/default_layout_margin_top"
                    android:layout_marginEnd="@dimen/default_layout_margin_right"
                    android:layout_marginBottom="@dimen/default_layout_margin_bottom"
                    android:text="@string/contact_name"
                    android:textAlignment="viewStart"
                    android:textSize="@dimen/sensor_name_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/phoneNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_layout_margin_left"
                    android:layout_marginEnd="@dimen/default_layout_margin_right"
                    android:layout_marginBottom="@dimen/default_layout_margin_bottom"
                    android:text="@string/contact_phone"
                    android:textAlignment="viewStart"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>